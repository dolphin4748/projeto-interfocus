<?xml version="1.0" encoding="utf-8" ?>
<!--Mapear entidade curso para NHibernate-->
<hibernate-mapping 
	xmlns="urn:nhibernate-mapping-2.2"
	namespace="ProjetoConsole.Models"
	assembly="ProjetoConsole">

	<class name="Cliente" lazy="false" table="clientes">
		<id name="Id" column="id" type="long">
			<generator class="sequence">
				<param name="sequence">clientes_seq</param>
			</generator>
		</id>

		<property name="Nome"	type="string" length="100" />
		<property name="Email"	type="string" length="5000" />
		<property name="Cpf"	type="string" not-null="false" />
		<property name="TotalDivida"	type="float" not-null="false" />
		<property name="DataNascimento" type="date"		not-null="false" />
		<property name="DataCadastro"	type="DateTime" not-null="true" />
	
	</class>
	
</hibernate-mapping>